{
  "name": "qr-signin",
  "author": {
    "name": "Josep Sayol",
    "email": "josep.sayol@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsayol/qr-signin.git"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "rimraf lib && rollup -c",
    "build:notmods": "rimraf lib && rollup -c --environment NOT_MODS",
    "build:dev": "rimraf lib && rollup -c --environment BUILD:dev",
    "build:emu": "rimraf lib && rollup -c --environment BUILD:dev,USE_EMULATOR",
    "serve": "npm run build:dev && firebase serve --only functions",
    "serve:emu": "npm run build:emu && firebase serve --only functions",
    "shell": "npm run build:dev && firebase functions:shell",
    "shell:emu": "npm run build:emu && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^7.2.0",
    "firebase-functions": "^2.2.1",
    "qrcode": "^1.3.3"
  },
  "devDependencies": {
    "@types/qrcode": "^1.3.2",
    "glob": "^7.1.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.9.0",
    "rollup-plugin-node-resolve": "^4.2.0",
    "rollup-plugin-replace": "^2.1.1",
    "rollup-plugin-typescript2": "^0.20.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": "8"
  },
  "private": true,
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 80
  }
}
